# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


POST     /user/register         pl.pgizka.gsenger.controllers.user.UserController.loginFacebookUser
GET      /user/getContacts       pl.pgizka.gsenger.controllers.user.UserController.getContacts

PUT      /chat/create           pl.pgizka.gsenger.controllers.chat.ChatController.createChat
GET      /chat/getAll          pl.pgizka.gsenger.controllers.chat.ChatController.getAllChatsWithParticipantInfo

PUT      /message/create        pl.pgizka.gsenger.controllers.message.MessageController.createMessage

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file           controllers.Assets.at(path="/public", file)

    